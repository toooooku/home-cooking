<div class="main">
  <div class="inner">
    <div class="form_wrapper">
      <h2 class="page-heading">🔸リクエスト料理🔸</h2>
      <%= form_with model: @blog, local: true do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="field">
          <%= f.label :title, "🍚メニュー名", class: :recipe_menu %><br />
          <%= f.text_field :title, class: :form_title, id: "blog_title" %>
        </div>

        <div class="field">
          <%= f.label :start_time, "🗓日時", class: :recipe_time %><br _>
          <%= f.datetime_select :start_time, class: :form_start_time, id: "blog_time" %>
        </div>
        
        <div class="field">
          <%= f.label :content, "📄メモ", class: :recipe_memo %><br _>
          <%= f.text_area :content, class: :form_cooking,id: "blog_content" %>
        </div>

        <div class="actions">
          <%= f.submit "保存する", class: :form_btn %>
        </div>
      <% end %>  
    </div>
  </div>
</div>  